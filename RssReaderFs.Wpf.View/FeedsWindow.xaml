<Window x:Class="RssReaderFs.Wpf.View.FeedsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Feeds" Height="300" Width="300"
        Visibility="{Binding Visibility}"
        Closing="Window_Closing"
        FontFamily="Yu Gothic">
    <Grid>
        <ListView x:Name="listView" ItemsSource="{Binding Feeds}" HorizontalAlignment="Left" Height="228" VerticalAlignment="Top" Width="292">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name"   DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Url"    DisplayMemberBinding="{Binding Url}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Add Feed" HorizontalAlignment="Left" Margin="10,233,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
